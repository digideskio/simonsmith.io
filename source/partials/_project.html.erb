<% path = "projects/#{project.id}/%{filename}.png" %>

<% content_for :scripts do %>
  <%= javascript_include_tag 'picturefill' %>
<% end %>

<div class="Project u-cf" id="<%= project.id %>">
  <div class="Project-header">
    <h2 class="Project-title"><%= project.title %></h2>
    <a class="Project-url" href="http://<%= project.url %>">Visit website</a>
  </div>
    <a class="u-block u-textCenter" href="http://<%= project.url %>">
    <picture>
      <source media="(min-width: 49.375em)"
              srcset="<%= image_path path % {filename: 'lg'} %>, <%= image_path path % {filename: 'lg@2x'} %> 2x">
      <source media="(min-width: 31.25em)"
              srcset="<%= image_path path % {filename: 'md'} %>, <%= image_path path % {filename: 'md@2x'} %> 2x">
      <source srcset="<%= image_path path % {filename: 'sm'} %>, <%= image_path path % {filename: 'sm@2x'} %> 2x">
      <img class="Project-img" src="<%= image_path path % {filename: 'sm'} %>">
    </picture>
   </a>
  <div class="Project-body">
    <%= markdown project.text %>
  </div>
</div>

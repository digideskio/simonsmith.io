<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_page.data.title || yield_content(:title) || 'Blog' %> &ndash; simonsmith.io &ndash; Portfolio and blog of a London based front-end web developer</title>
    <%= stylesheet_link_tag 'site' %>
  </head>
  <body>
    <header class="Header" role="banner">
      <div class="Container">
        <div class="Grid Grid--alignMiddle Grid--withGutter">
          <div class="Header-wrapLogo Grid-cell u-md-size3of12">
            <%= partial 'logo' %>
          </div>
          <div class="Header-wrapNav Grid-cell u-md-size5of12 u-md-before4of12">
            <%= partial 'nav' %>
          </div>
        </div>
      </div>
    </header>
    <main class="Container Container--main" role="main">
      <div class="Grid Grid--withGutter u-cf">
        <div class="Grid-cell u-md-size9of12 u-floatRight">
            <%= yield %>
        </div>
        <div class="Grid-cell u-md-size3of12 u-floatLeft">
          <div class="Aside">
            <div class="Aside-item Aside-item--shiftUp u-pt30">
              <%= partial 'profile' %>
            </div>
            <div class="Aside-item u-p10">
              <%= partial 'contact' %>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer class="Footer" role="contentinfo">
      <div class="Container">
        <div class="Grid Grid--withGutter">
          <div class="Grid-cell u-md-size9of12 u-md-before3of12">
            <p class="Footer-text">
              Simon Smith 2015 &bull; Built with
              <a class="u-linkMuted u-linkUnderline u-linkNoDecoration" href="http://middlemanapp.com/">Middleman</a> and
              <a class="u-linkMuted u-linkUnderline u-linkNoDecoration" href="http://suitcss.github.io/">SUIT CSS</a> &bull; View
              the sauce
              <a class="u-linkMuted u-linkUnderline u-linkNoDecoration" href="https://github.com/simonsmith/simonsmith.io">on
                GitHub</a>
            </p>
          </div>
        </div>
      </div>
    </footer>
  </body>
  <%= javascript_include_tag 'all' %>
  <% if content_for? :scripts %>
    <%= yield_content :scripts %>
  <% end %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-6798894-3', 'auto');
    ga('send', 'pageview');
  </script>
</html>

<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title><%= current_page.data.title || 'Blog' %> &ndash; simonsmith.io &ndash; Portfolio and blog of a London based front-end web developer</title>
    <%= stylesheet_link_tag 'site' %>
  </head>
  <body>
    <%= partial 'header' %>
    <main class="Container Container--main" role="main">
      <div class="Grid Grid--withGutter u-cf">
        <div class="Grid-cell u-md-size9of12 u-floatRight">
            <%= yield %>
        </div>
        <div class="Grid-cell u-md-size3of12 u-floatLeft">
          <div class="Aside Aside--roundBtm">
            <div class="Aside-item Aside-item--shiftUp Aside-item--innerPadTop">
              <%= partial 'profile' %>
            </div>
          </div>
        </div>
      </div>
    </main>
    <%= partial 'footer' %>
  </body>
  <%= javascript_include_tag 'all' %>
  <% if content_for? :scripts %>
    <script>
      <%= yield_content :scripts %>
    </script>
  <% end %>
</html>
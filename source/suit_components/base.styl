/**
 * Base styles
 */

base-link-color =               #069
base-link-color-hover =         base-link-color
base-color =                    inherit
base-font-family =              sans-serif
base-font-size =                1rem
base-blockquote-color =         inherit
base-blockquote-border-color =  inherit

@require "./functions"
@require "./theme"

html
  box-sizing border-box
  font-size base-font-size

// http://css-tricks.com/inheriting-box-sizing-probably-slightly-better-best-practice/
*, *::before, *::after
  box-sizing inherit

body
  font-family base-font-family
  color base-color

a
  color base-link-color
  text-decoration none
  transition color .15s ease

  &:hover
    color base-link-color-hover
    text-decoration underline

img
  max-width 100%
  height auto

h1
  font-size rem(32)
  color #222
  font-weight 600

h2
  font-size rem(28)

h3
  font-size rem(24)

h4
  font-size rem(20)

h2, h3, h4
  font-weight 400
  color #111

blockquote
  border-left 5px solid base-blockquote-border-color
  padding-left rem(10)
  color base-blockquote-color
  margin rem(20) 0 rem(20) rem(20)


code
  font-family Monaco, Consolas, "Lucida Console", monospace
  background-color #f2f2f2
  border 1px solid #ddd
  font-size .875rem